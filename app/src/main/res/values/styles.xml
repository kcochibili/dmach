<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OssLicenses" parent="Theme.AppCompat.DayNight" />

    <style name="Theme.AppCompat.NoActionBar.FullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="DMachTheme" parent="Theme.AppCompat.NoActionBar.FullScreen">
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:windowBackground">@color/colonial</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="colorControlActivated">@color/gamboge</item>
        <item name="colorControlNormal">@color/colonial</item>
    </style>

    <style name="PatchTheme" parent="DMachTheme">
        <item name="android:textColor">@color/dune</item>
        <item name="colorControlActivated">@color/dune</item>
    </style>

    <style name="Control">
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/sel_control</item>
    </style>

    <style name="Control.Play">
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="Logo">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_channel</item>
        <item name="android:textColor">@color/dune</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/sel_channel</item>
        <item name="android:textColor">@color/colonial</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Channel" parent="Button">
        <item name="android:textSize">@dimen/text_size_channel</item>
    </style>

    <style name="Setting" parent="Button">
        <item name="android:background">@drawable/sel_setting</item>
        <item name="android:textSize">@dimen/text_size_channel</item>
    </style>

    <style name="Config">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colonial</item>
    </style>

    <style name="SettingText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/dune</item>
        <item name="android:textSize">@dimen/text_size_setting</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PanText">
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/dune</item>
        <item name="android:textSize">@dimen/text_size_channel</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dune</item>
        <item name="android:textColorPrimary">@color/colonial</item>
        <item name="android:textColor">@color/gamboge</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
